@model Phoenix.Models.Person

@{
    ViewData["Title"] = "Pessoas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>>@ViewData["Title"] - Inativar pessoa</h4>

<h4 style="color: red">Deseja realmente inativar: @Html.DisplayFor(model => model.Name)?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alias)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Alias)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublicPlace)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublicPlace.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.District)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.District)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Provider)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Provider)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Shipping)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shipping)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Associate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Associate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PersonType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PersonType.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-danger" onclick="this.closest('form').submit();return false;">
            <i class="fa fa-ban"></i>
            Inativar
        </a>
        <a class="btn btn-secondary" href="@Url.Action("Index", "People")">
            <i class="fa fa-undo"></i>
            Cancelar
        </a>
    </form>
</div>
