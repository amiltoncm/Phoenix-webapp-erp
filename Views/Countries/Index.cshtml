@model IEnumerable<Phoenix.Models.Country>

@{
    ViewData["Title"] = "Países";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display: flex; justify-content: space-between;">
    <div>
        <h4>@ViewData["Title"]</h4>
    </div>
    <div style="display: flex; justify-content: flex-end">
        <div>
            <form>
                <p>
                    <input type="text" name="SearchString" placeholder="Digite a busca..."/>
                    <a class="btn btn-outline-info"
                       style="margin-left: 5px"
                       value="Filter"
                       onclick="this.closest('form').submit();return false;">
                        <i class="fa fa-search"></i>
                        Filtrar
                    </a>
                    <a class="btn btn-outline-secondary" 
                       style="margin-left: 5px" 
                       href="@Url.Action("Index", "Countries")">
                        <i class="fa fa-times"></i>
                        Limpar
                    </a>
                </p>
            </form>
        </div>
        <div style="margin-left: 30px;">
            <a class="btn btn-primary" href="@Url.Action("Create", "Countries")">
                <i class="fa fa-plus"></i>
                Novo
            </a>
        </div>
    </div>
</div>


<table class="table table-striped table-hover table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iso2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iso3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iso2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iso3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <i class="fa fa-circle-info" data-toggle="tooltip" data-placement="top" title="Detalhes"></i>
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id" style="color: green; padding-left: 10px">
                    <i class="fa fa-edit icons-crud" data-toggle="tooltip" data-placement="top" title="Editar"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" style="color: red; padding-left: 10px">
                    <i class="fa fa-trash" data-toggle="tooltip" data-placement="top" title="Excluir"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
