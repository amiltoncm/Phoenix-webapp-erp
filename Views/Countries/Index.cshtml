@model IEnumerable<Phoenix.Models.Country>

@{
    ViewData["Title"] = "Países";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Países</h4>
<a class="btn btn-primary" href="@Url.Action("Create", "Countries")">
    Novo
</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iso2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iso3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iso2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iso3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                        <img src="~/images/info_32.png" height="32px" width="32px" />
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <img src="~/images/edit_32.png" height="32px" width="32px" />
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <img src="~/images/remove_32.png" height="32px" width="32px" />
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
