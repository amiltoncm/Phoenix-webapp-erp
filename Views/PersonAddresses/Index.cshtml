@model IEnumerable<Phoenix.Models.PersonAddress>

@{
    ViewData["Title"] = "Pessoas - Endereços";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-tabs" style="margin-bottom:10px;">
  <li class="nav-item">
    <a class="nav-link" href="@Url.Action("Edit", "People", 2)">Pessoas</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" aria-current="page">Endereços adicionais</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Contatos</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Observações</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Ficha financeira</a>
  </li>
</ul>

<div style="display: flex; justify-content: space-between;">
    <div>
        <h4>@ViewData["Title"]</h4>
    </div>
</div>

<table class="table table-striped table-hover table-sm" id="amxTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Complement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicPlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.Alias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicPlace.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
